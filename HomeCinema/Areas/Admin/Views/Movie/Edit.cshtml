@model Movie

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit</h3>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" type="text" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" type="text" />
                <span asp-validation-for="Description"></span>

            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl"></label>
                <input asp-for="ImgUrl" class="form-control" type="text" />
                <span asp-validation-for="ImgUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate"></label>
                <input asp-for="Rate" class="form-control" type="number" />
                <span asp-validation-for="Rate"></span>

            </div>
            <div class="form-group">
                <label asp-for="CatId">Category</label>
                <select asp-for="CatId" asp-items="ViewBag.Categories" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" asp-items="ViewBag.Status" class="form-select"></select>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left-circle"></i> Back</a>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />




